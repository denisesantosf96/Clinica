                <option>Clínico Geral</option>
                <option>Coleta de Sangue</option>
                <option>Dermatologista</option>
                <option>Fisioterapeuta</option>
                <option>Hematologista</option>
                <option>Oftalmologista</option>
                <option>Pediatra</option>
                <option>Raio-x</option>
                <option>Ultrassonografia</option>
                <option>Nutricionista</option>
            </select>
        </div>
        <div class="col-md-6">
            <label for="inputTipo" class="form-label">Tipo</label>
            <select asp-for="Tipo" class="form-control">
                <option>Selecione o Tipo</option>
                <option>Consulta</option>
                <option>Exame</option>
            </select>
        </div>
    </div>
    <input type="submit" value="Salvar" class="btn btn-success" style="margin-top: 30px; margin-bottom: 15px;">
