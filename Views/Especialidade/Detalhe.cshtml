﻿
@model Especialidade

@{
    ViewData["Title"] = "Adicionar uma nova Especialidade";
}

<div class="text-center">
    <h4>
        @if (Model.Id > 0)
        {
        @Html.Raw("Editar Especialidade")
            ;
        }
        else
        {
        @Html.Raw("Incluir Especialidade")
            ;
        }
    </h4>
</div>

<form method="POST" asp-action="Detalhe" asp-controller="Especialidade" class="form p-5"
      style="border: 3px solid grey; background: #E6E6E6; border-radius: 15px; margin-top: 30px;">
    <div class="text-danger">@Html.ValidationSummary()</div>
    <div class="row">
        <div class="col-md-6">
            <input asp-for="Id" type="hidden" class="form-control">
            <label for="inputNome" class="form-label">Nome</label>
            <select asp-for="Nome" class="form-control">
                <option value="">Selecione uma Especialidade</option>
