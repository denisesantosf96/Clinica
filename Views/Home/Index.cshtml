@{
    ViewData["Title"] = "";
}

<div class="text-center"
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>


    <div id="carouselExampleFade" class="carousel slide carousel-fade" data-bs-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/Imagens/recepcao.jpg" alt="Recepção" class="d-block w-100" style="height: 80vh; object-fit: cover; margin-left: 0; margin-right: 50px; margin-top: 15px; margin-bottom: 10px;">
                <div class="carousel-caption">
                    <h3 style="color: black;">Visite nossa clínica e veja como transformamos o atendimento em uma experiência única e acolhedora!</h3>
                </div>
            </div>
            <div class="carousel-item">
                <img src="~/Imagens/exame.jpg" alt="Pessoa sendo examinada" class="d-block w-100" style="height: 80vh; object-fit: cover; margin-left: 0; margin-right: 50px; margin-top: 15px; margin-bottom: 10px;">
                <div class="carousel-caption">
                    <h3 style="color: black;">Cada detalhe do exame é voltado para garantir a saúde e o bem-estar do paciente</h3>
                </div>
            </div>
            <div class="carousel-item">
                <img src="~/Imagens/consulta.jpg" alt="Médico atendendo uma pessoa" class="d-block w-100" style="height: 80vh; object-fit: cover; margin-left: 0; margin-right: 50px; margin-top: 15px; margin-bottom: 10px;">
                <div class="carousel-caption">
                    <h3 style="color: black;">Com um olhar técnico e preciso, o médico analisa o quadro clínico</h3>
                </div>
            </div>
            <div class="carousel-item">
                <img src="~/Imagens/sala.jpg" alt="Sala" class="d-block w-100" style="height: 80vh; object-fit: cover; margin-left: 0; margin-right: 50px; margin-top: 15px; margin-bottom: 10px;">
                <div class="carousel-caption">
                    <h3 style="color: black;">Conecte sua clínica aos pacientes que precisam de você: cadastre-se e transforme vidas</h3>
                </div>
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleFade" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Anterior</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleFade" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Próximo</span>
        </button>
    </div>