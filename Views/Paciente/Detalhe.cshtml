@model Paciente

@{
    ViewData["Title"] = "Adicionar um novo Paciente";
}


<div class="text-center">
    <h4>@if (Model.Id > 0)
        {
            @Html.Raw("Editar Paciente")
            ;
        }
        else
        {
            @Html.Raw("Incluir Paciente")
            ;
        }
    </h4>
</div>

<form method="POST" asp-action="Detalhe" asp-controller="Paciente" class="form p-5"
    style="border: 3px solid grey; background: #E6E6E6; border-radius: 15px; margin-top: 30px;">
    <div class="text-danger">@Html.ValidationSummary()</div>

    <div class="row">
        <div class="col-md-6">
            <input asp-for="Id" type="hidden">
            <label for="inputNome" class="form-label">Nome</label>
            <input asp-for="Nome" type="text" class="form-control">
        </div>
        <div class="col-md-6">
            <label for="inputCPF" class="form-label">CPF</label>
            <input asp-for="CPF" type="text" class="form-control" maxlength="14">
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <label for="inputRG" class="form-label">RG</label>
            <input asp-for="RG" type="text" class="form-control">
        </div>
        <div class="col-md-6">
            <label for="inputTelefone" class="form-label">Telefone</label>
            <input asp-for="Telefone" type="text" class="form-control" placeholder="(11)11111-1111">
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <label for="inputEmail" class="form-label">E-mail</label>
            <input asp-for="Email" type="text" class="form-control" placeholder="seuemail@email.com">
        </div>
        <div class="col-md-6">
            <label for="inputEndereco" class="form-label">Endereço</label>
            <input asp-for="Endereco" type="text" class="form-control" placeholder="Rua/Avenida">
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <label for="inputNumero" class="form-label">Nº</label>
            <input asp-for="Numero" type="text" class="form-control" placeholder="nº">
        </div>
        <div class="col-md-6">
            <label for="inputComplemento" class="form-label">Complemento</label>
            <input asp-for="Complemento" type="text" class="form-control">
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <label for="inputBairro" class="form-label">Bairro</label>
            <input asp-for="Bairro" type="text" class="form-control">
        </div>
        <div class="col-md-6">
            <label for="inputCidade" class="form-label">Cidade</label>
            <input asp-for="Cidade" type="text" class="form-control">
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <label for="inputEstado" class="form-label">Estado</label>
            <input asp-for="Estado" type="text" class="form-control">
        </div>
        <div class="col-md-6">
            <label for="inputPais" class="form-label">País</label>
            <input asp-for="Pais" type="text" class="form-control">
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <label for="inputCEP" class="form-label">CEP</label>
            <input asp-for="CEP" type="text" class="form-control" maxlength="9">
        </div>
        <div class="col-md-6">
            <label for="inputDataNascimento" class="form-label">Data de Nascimento</label>
            <input asp-for="DataNascimento" type="datetime-local" class="form-control">
        </div>
    </div>

    <input type="submit" value="Salvar" class="btn btn-success" style="margin-top: 30px; margin-bottom: 15px;">
    <input type="button" value="Voltar" class="btn btn-success" onclick="Voltar()"
        style="margin-top: 30px; margin-bottom: 15px;"></td>
</form>

<script>

    function Voltar() {
        window.location.href = "http://localhost:5210/Paciente";
    }

    window.onload = function () {
        $("#CEP").inputmask('99999-999');
        $("#DataNascimento").inputmask('99/99/9999');
        $("#CPF").inputmask('999.999.999-99');
        $("#Telefone").inputmask('(99)99999-9999');
    }

</script>