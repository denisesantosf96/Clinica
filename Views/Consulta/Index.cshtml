@using Microsoft.AspNetCore.Http
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@model X.PagedList.IPagedList<Consulta>
@{
    ViewData["Title"] = "Consultas";
}

@section Scripts{

}
<div class="text-center">
    <h4>Consultas</h4>
    <select id="idClinica" asp-items="@ViewBag.Clinicas" class="form-control" onchange="Pesquisar()"></select>
    <input type="text" id="textopesquisa" class="form-control" onkeyup="VerificarDigitacao(event)" value="@HttpContextAccessor.HttpContext.Session.GetString("TextoPesquisa")" placeholder="⌕   Pesquisar">
    <input type="button" value="Limpar" onclick="Limpar()" class="btn btn-primary">
    <input type="button" value="Pesquisar" onclick="Pesquisar()" class="btn btn-primary">
    <a asp-area="" asp-controller="Consulta" asp-action="Detalhe"><input type="button" value="Novo"
        class="btn btn-primary" style="margin-top: 30px; margin-bottom: 30px;"></a>
    <div id="divpartial">
        <partial name="~/Views/Consulta/ListaPartialView.cshtml" />
    </div>
</div>

<script>

    function Limpar() {
        $('#textopesquisa').val(''); 
        Pesquisar();
    }

    //limpar textopesquisa ao recarregar a página
    document.addEventListener("DOMContentLoaded", function() {
        document.getElementById("textopesquisa").value = "";
    });

    function Pesquisar() {
        var result = $('#textopesquisa').val(); 
        var idClinica = $('#idClinica').val();
        var url = "/Consulta/ListaPartialView";
        var parametros = { nome: result, idClinica : idClinica };
        $.get(url, parametros) 
            .done(function (data) {
                $('#divpartial').html(data);  
            });
    }

    function recarregarPagina() {
            location.reload();
        }

    document.getElementById("limpar").addEventListener("click", recarregarPagina);

    function VerificarDigitacao(e) {
        var code = (e.keyCode ? e.keyCode : e.which);
        if (code == 13) { 
            Pesquisar();
        }
    }

    function Excluir(id) {
        var result = confirm("Tem certeza que quer excluir?");
        if (result) {
            var url = "/Consulta/Excluir";
            var parametros = { id: id };
            $.get(url, parametros) 
                .done(function (data) { 

                    if (data.sucesso) { 
                        document.location.reload(true);
                    } else {
                        alert(data.mensagem);
                    }

                });
        }
    }
</script>