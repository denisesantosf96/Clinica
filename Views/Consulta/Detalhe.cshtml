@model Consulta
@{
    ViewData["Title"] = "Adicionar uma nova Consulta";
}


<div class="text-center">
    <h4>@if (Model.Id > 0)
        {
            @Html.Raw("Editar Consulta");
        } else {
            @Html.Raw("Incluir Consulta");
        }
    </h4>
</div>

<form method="POST" asp-action="Detalhe" asp-controller="Consulta" class="form p-5"
    style="border: 3px solid grey; background: #E6E6E6; border-radius: 15px; margin-top: 30px;">
    <div class="text-danger">@Html.ValidationSummary()</div>

    <div class="row">
        <div class="col-md-6">
            <input asp-for="Id" type="hidden" class="form-control">
            <label class="form-label">Clínica</label>
            <select asp-for="IdClinica" asp-items="@ViewBag.Clinicas" class="form-control"></select>
        </div>
        <div class="col-md-6">
            <label class="form-label">Nome</label>
            <input asp-for="Nome" type="text" class="form-control">
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <label class="form-label">Descrição</label>
            <input asp-for="Descricao" type="text" class="form-control">
        </div>
        <div class="col-md-6">
            <label class="form-label">Valor</label>
            <input asp-for="Valor" type="number" class="form-control">
        </div>
    </div>
    
    <input type="submit" value="Salvar" class="btn btn-success" 
        style="margin-top: 30px; margin-bottom: 15px;">
    <input type="button" value="Voltar" class="btn btn-success" onclick="Voltar()"
        style="margin-top: 30px; margin-bottom: 15px;"></td>
</form>

<script>
    function Voltar(){
        window.location.href = "http://localhost:5210/Consulta";
    }
</script>