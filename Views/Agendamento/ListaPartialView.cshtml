@model X.PagedList.IPagedList<Agendamento>
@using X.PagedList.Mvc.Core;
@using X.PagedList.Web.Common;

<table class="table">
        <thead class="thead-dark">
        <tr>
            <th>Id</th>
            <th>Clínica</th>

            <th>Médico</th>
            <th>Paciente</th>            
            
            <th>Data</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                <tr>
            <td>@Model[i].Id</td>
            <td>@Model[i].IdClinica - @Model[i].NomeClinica</td>
            <td>@Model[i].IdMedico - @Model[i].NomeMedico - @Model[i].Especializacao</td>
            <td>@Model[i].IdPaciente - @Model[i].NomePaciente</td>            
            <td>@Model[i].Data</td>
            <td><input type="button" value="Editar" class="btn btn-dark" onclick="javascript:window.location=`/Agendamento/Detalhe/${@Model[i].Id}`">
            <input type="button" value="Excluir" class="btn btn-danger" onclick="Excluir(@Model[i].Id)"></td>
            
            </tr>
            }
        
        </tbody>
    </table>

    @Html.PagedListPager(Model, pagina => Url.Action("Index", new { pagina })) 